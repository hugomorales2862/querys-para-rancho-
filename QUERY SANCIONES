 SELECT    PER_CATALOGO AS CATALOGO, GRA_DESC_LG AS GRADO,  ARM_DESC_LG AS ARMA,
    TRIM(PER_NOM1) || ' ' || TRIM(PER_NOM2) AS NOMBRES, TRIM(PER_APE1)||' '||TRIM(PER_APE2) AS APELLIDOS , PER_PROMOCION, DET_DETALLE AS SANCION, SAN_DESCRIPCION AS DESCRIPCION,
    TRIM (SAN_TIPO) ||' '||SAN_CANTIDAD AS CANTIDAD_SANCION,
    DEP_DESC_LG AS DEPENDENCIA,GRA_CODIGO    FROM PSAN_DETALLE 
 INNER JOIN MPER ON PER_CATALOGO = DET_CATALOGO 
 INNER JOIN PSAN_BOLETA ON det_catalogo = bol_det_catalogo
                         AND det_fecha = bol_det_fecha
                           AND det_sancion = bol_det_sancion
 INNER JOIN GRADOS ON BOL_DET_GRADO = GRA_CODIGO 
 INNER JOIN ARMAS ON PER_ARMA = arm_codigo
 INNER JOIN MDEP ON DEP_LLAVE = DET_DEPENDENCIA 
 INNER JOIN PSAN_SANCIONES  ON DET_SANCION = SAN_CODIGO 
 WHERE per_promocion  = 153 AND DET_STATUS = 0 AND BOL_DET_STATUS = 0 and per_sitUacion in ('TH','T0',11)
 group by  per_catalogo,nombres,per_promocion,sancion,descripcion,cantidad_sancion,dependencia,per_sitUacion,GRA_CODIGO,GRADO,ARMA,APELLIDOS
 ORDER BY CATALOGO ASC , GRA_CODIGO ASC
